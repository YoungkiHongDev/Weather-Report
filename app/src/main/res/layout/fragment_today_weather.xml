<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/today_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TodayWeather">

    <ImageView
        android:id="@+id/shirts"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/shirts"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/city"
        android:textColor="#FFFFFF"
        android:layout_marginTop="@dimen/mj_dp10"
        android:layout_gravity="center_horizontal"
        android:text="시,도 이름"
        android:textSize="@dimen/text_dp15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gu_eup_myun_dong"
        android:layout_marginTop="@dimen/mj_dp10"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_dp15"
        android:text="구,군 읍,면,동 이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/date"
        android:layout_marginTop="@dimen/mj_dp10"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_dp15"
        android:text="M월 D일 E요일 HH시 mm분"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/mj_dp20"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/current_temp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/text_dp15"
            android:textSize="@dimen/temp_big_text"
            android:text="17℃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/current_weather"
            android:layout_width="@dimen/icon_big"
            android:layout_height="@dimen/icon_big"
            android:layout_weight="1"
            android:src="@drawable/sunny"
            />
    </LinearLayout>


    <TextView
        android:layout_marginTop="@dimen/mj_dp30"
        android:id="@+id/current_des"
        android:layout_gravity="center_horizontal"
        android:text="맑음"
        android:textSize="@dimen/text_dp15"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#FFFFFF"
        android:layout_marginTop="@dimen/mj_dp30"
        android:textSize="@dimen/text_dp15"
        android:layout_gravity="center_horizontal"
        android:text="시간별"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/mj_dp30"
        android:layout_marginLeft="@dimen/mj_dp45"
        android:layout_marginRight="@dimen/mj_dp25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time3"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="오전 12시"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/later3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mj_dp45"
                android:layout_marginTop="@dimen/mj_dp5"
                android:src="@drawable/sunny" />
            <TextView
                android:id="@+id/pop3"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/mj_dp5"
                android:textColor="#FFFFFF"
                android:text="20%"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/mj_dp1"
            android:layout_height="@dimen/mj_dp80"
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_marginTop="@dimen/mj_dp5"
            android:background="#26FFFFFF" />

        <LinearLayout
            android:layout_marginLeft="@dimen/mj_dp5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time6"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="오전 3시"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/later6"
                android:layout_marginTop="@dimen/mj_dp5"
                android:src="@drawable/sunny"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/mj_dp45"/>
            <TextView
                android:id="@+id/pop6"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/mj_dp5"
                android:textColor="#FFFFFF"
                android:text="20%"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_marginTop="@dimen/mj_dp5"
            android:background="#26FFFFFF"
            android:layout_width="@dimen/mj_dp1"
            android:layout_height="@dimen/mj_dp80"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time9"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="오전 6시"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/later9"
                android:layout_marginTop="@dimen/mj_dp5"
                android:src="@drawable/sunny"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/mj_dp45"/>
            <TextView
                android:id="@+id/pop9"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/mj_dp5"
                android:textColor="#FFFFFF"
                android:text="20%"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_marginTop="@dimen/mj_dp5"
            android:background="#26FFFFFF"
            android:layout_width="@dimen/mj_dp1"
            android:layout_height="@dimen/mj_dp80"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time12"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="오전 9시"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/later12"
                android:layout_marginTop="@dimen/mj_dp5"
                android:src="@drawable/sunny"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/mj_dp45"/>
            <TextView
                android:id="@+id/pop12"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/mj_dp5"
                android:textColor="#FFFFFF"
                android:text="20%"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_marginTop="@dimen/mj_dp5"
            android:background="#26FFFFFF"
            android:layout_width="@dimen/mj_dp1"
            android:layout_height="@dimen/mj_dp80"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/mj_dp5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time15"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="오후 12시"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/later15"
                android:layout_marginTop="@dimen/mj_dp5"
                android:src="@drawable/sunny"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/mj_dp45"/>
            <TextView
                android:id="@+id/pop15"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/mj_dp5"
                android:textColor="#FFFFFF"
                android:text="20%"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_marginTop="@dimen/mj_dp5"
            android:background="#26FFFFFF"
            android:layout_width="@dimen/mj_dp1"
            android:layout_height="@dimen/mj_dp80"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/mj_dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time18"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="오후 3시"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/later18"
                android:layout_marginTop="@dimen/mj_dp5"
                android:src="@drawable/sunny"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/mj_dp45"/>
            <TextView
                android:id="@+id/pop18"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/mj_dp5"
                android:textColor="#FFFFFF"
                android:text="20%"
                android:textSize="@dimen/text_dp10"
                android:layout_width="@dimen/mj_dp45"
                android:layout_height="@dimen/text_dp15"/>

        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_marginTop="@dimen/mj_dp10"
        android:layout_marginLeft="@dimen/mj_dp20"
        android:layout_marginRight="@dimen/mj_dp25"
        android:layout_marginBottom="@dimen/mj_dp30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>