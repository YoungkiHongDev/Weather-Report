<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/air_pollution_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff0000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/gps_icon"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/air_gugun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연수구"
            android:textSize="18dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

        <ImageView
            android:id="@+id/air_face"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/smileface_icon"
            android:gravity="center"/>
        <TextView
            android:id="@+id/air_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="좋음"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/air_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000/00/00 00:00"
            android:textSize="15dp"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:id="@+id/air_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh_icon"/>
    </LinearLayout>

</LinearLayout>